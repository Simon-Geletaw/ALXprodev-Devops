#!/bin/bash

# List of Pokémon
POKEMON_LIST=("bulbasaur" "ivysaur" "venusaur" "charmander" "charmeleon")

# Delay in seconds between requests (to avoid rate-limiting)
DELAY=2

# Maximum retry attempts
MAX_RETRIES=3

for POKEMON in "${POKEMON_LIST[@]}"; do
    
    NAME=$(echo "$POKEMON" | tr '[:upper:]' '[:lower:]')
    FILE="${NAME}.json"

    echo "Fetching data for $POKEMON..."

    ATTEMPT=1
    SUCCESS=false

    # Retry loop
    while [ $ATTEMPT -le $MAX_RETRIES ]; do
        
        RESPONSE=$(curl -s -w "%{http_code}" -o "$FILE" "https://pokeapi.co/api/v2/pokemon/$NAME")
        HTTP_CODE=$RESPONSE

        if [ "$HTTP_CODE" -eq 200 ]; then
            echo "Success! Saved to $FILE"
            SUCCESS=true
            break
        else
            echo "Attempt $ATTEMPT failed for $POKEMON (HTTP $HTTP_CODE)"
            
            # Remove bad file if created
            [ -f "$FILE" ] && rm "$FILE"

            ((ATTEMPT++))
            sleep 1
        fi

    done

    # After retries—if still failed
    if [ "$SUCCESS" = false ]; then
        echo "Failed to fetch $POKEMON after $MAX_RETRIES attempts." | tee -a errors.txt
    fi

    sleep $DELAY
done

echo "All done!"
