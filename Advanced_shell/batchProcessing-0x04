#!/bin/bash

POKEMON_LIST=("bulbasaur" "ivysaur" "venusaur" "charmander" "charmeleon")

fetch_pokemon() {
    NAME=$1
    FILE="${NAME}.json"
    
    HTTP_CODE=$(curl -s -w "%{http_code}" -o "$FILE" "https://pokeapi.co/api/v2/pokemon/$NAME")
    
    if [ "$HTTP_CODE" -ne 200 ]; then
        echo "Failed: $NAME (HTTP $HTTP_CODE)" >> errors.txt
        rm -f "$FILE"
    else
        echo "Success: $NAME"
    fi
}

for P in "${POKEMON_LIST[@]}"; do
    fetch_pokemon "$P" &
done

wait
echo "Parallel fetch completed!"
